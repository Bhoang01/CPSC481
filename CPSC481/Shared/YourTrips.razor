<div class="flex max-w-full p-2 flex-col justify-center items-center mt-4">
	<div class="w-3/4 flex flex-col justify-start items-center">
		<div
			class="flex flex-row justify-center items-center hover:bg-cream3 rounded p-2 gap-x-2 w-auto cursor-pointer transition-all"
			@onclick="OnClick">
			<p class="text-black focus:outline-none font-medium text-lg">
				Current Trip: Toronto 2022
			</p>
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
			</svg>
		</div>

		@if (isOpen)
		{
			<div class="self-center fixed bg-cream border-2 border-black text-base z-50 p-2 list-none rounded shadow-md mt-12">
				<ul class="py-2" aria-labelledby="dropdown">
					<li>
						<a href="#" class="text-lg hover:bg-cream3 text-black block p-2 rounded">Toronto 2022</a>
					</li>
					<li>
						<a href="#" class="text-lg hover:bg-cream3 text-black block p-2 rounded">Miami 2019</a>
					</li>
					<li>
						<a href="#" class="text-lg hover:bg-cream3 text-black block p-2 rounded">ADD TRIP +</a>
					</li>
				</ul>
			</div>
		}
		<div class="grid grid-cols-5 gap-6 mt-4">
			<TripsCard Destination="Toronto 2022" Image="images/Toronto-Sample.png" />
			<TripsCard Destination="Miami 2019" Image="images/Miami-Sample.png" />
			<div class="flex flex-col justify-center items-center p-4">
				<img src="images/add.png"
					class="rounded-full border-2 border-black hover:bg-cream3 transition-all cursor-pointer" />
			</div>
		</div>
	</div>
</div>

@code {
	bool isOpen = false;

	void OnClick()
	{
		isOpen = !isOpen;
	}
}