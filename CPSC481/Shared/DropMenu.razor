<div
	class="bg-cream text-base z-50 p-2 list-none rounded select-none border-2 @(isOpen ? "mt-40 border-black shadow-xl" : "border-cream")">
	<ul class="">
		<li
			class="text-black hover:bg-cream3 focus:outline-none font-medium text-lg rounded p-1 px-2 cursor-pointer text-center inline-flex items-center gap-x-2 @(isOpen ? "bg-cream3" : "")"
			@onclick=" OnClick">
			Hi, @name
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
			</svg>
		</li>
		@if (isOpen)
		{
			<li>
				<a href="/favorites"
				class="text-lg hover:bg-cream3 text-black block p-1 px-2 cursor-pointer rounded select-none mt-1">Favorites</a>
			</li>
			<li>
				<a href="/trips"
				class="text-lg hover:bg-cream3 text-black block p-1 px-2 cursor-pointer rounded select-none mt-1">Your Trips</a>
			</li>
			<li>
				<a href="/emergency"
				class="text-lg hover:bg-cream3 text-black block p-1 px-2 cursor-pointer rounded select-none mt-1">Emergency</a>
			</li>
			<li>
			<a href="#" class="text-lg hover:bg-cream3 text-black block p-1 rounded px-2 cursor-pointer select-none mt-1">Sign
				out</a>
		</li>
		}
	</ul>
</div>

@code {
	[Parameter]
	public string name { get; set; } = "";
	bool isOpen = false;

	void OnClick()
	{
		isOpen = !isOpen;
	}
}