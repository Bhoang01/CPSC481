<div class="flex flex-col justify-self-center self-center justify-center items-center py-6">
	<div class = "pb-5" >
		<p class="text-xl text-center font-bold text-black">@Destination</p>
	</div>
	<div class = "hover:shadow-2xl rounded-md border-rounded border-2 border-black">
		<img src="@Image" width="225" height="450"  alt="@Destination icon" />
		<div class = "bg-cream1 border-t-0 justify-center items-center">
			<div class="flex flex-col justify-self-center self-center justify-center items-center py-3 gap-y-4">
				<button class="px-4 py-2 bg-blue hover:bg-blue2 transition-all text-center text-xl text-cream">View Itinerary</button>
				<button class="px-4 py-2 bg-blue hover:bg-blue2 transition-all text-center text-xl text-cream">Trip Details</button>
			</div>
		</div>
	</div>
</div>


@code {
	[Parameter]
	public string Destination { get; set; } = "";
	[Parameter]
	public string Image { get; set; } = "";
}

