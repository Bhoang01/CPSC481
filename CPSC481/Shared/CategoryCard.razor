<div
	class="flex flex-col justify-center items-center w-1/5 p-2 border border-black rounded cursor-pointer bg-cream hover:bg-cream2 transition-all">
	<p class="text-2xl font-bold text-black">@Category</p>
	<img src="@URL" class="p-2" width="100" height="100" alt="@Category icon" />
</div>


@code {
	[Parameter]
	public string Category { get; set; } = "";
	[Parameter]
	public string URL { get; set; } = "";
}