<div class="flex flex-col w-3/4 gap-y-3">
	<div class="flex flex-row w-full min-h-full border-2 border-black rounded p-4 justify-between items-start gap-x-4">
		<div class="flex flex-col justify-start items-start w-1/3 gap-y-2">
			<div class="flex flex-col w-full justify-center items-center">
				<img src="https://media-cdn.tripadvisor.com/media/photo-s/0e/6f/e2/69/iq-brookfield-place.jpg"
					class="w-full rounded aspect-video" alt="@title image" />
				<div class="flex flex-row justify-between items-center w-4/5">
					<p class="text-2xl font-bold text-black cursor-pointer">&#8592</p>
					<p class="text-lg font-bold text-black">gallery</p>
					<p class="text-2xl font-bold text-black cursor-pointer">&#8594</p>
				</div>
			</div>
			<div class="flex flex-col items-start justify-start">
				<p class="text-lg text-black font-bold">Rating:</p>
				<div class="flex flex-row items-center justify-center gap-x-1">
					@for (int i = 0; i < rating; i++)
					{
						<img src="images/star.png" width="16" height="16" alt="star" />
					}
					<p class="text-lg text-black ml-2">@rating / 5</p>
				</div>
			</div>
			<div class="flex flex-col items-start justify-start gap-y-1">
				<p class="text-lg text-black font-bold">Price:</p>
				<p>$@price / Person</p>
			</div>
			<div class="flex flex-col items-start justify-start gap-y-1">
				<p class="text-lg text-black font-bold">Address:</p>
				<p>@address</p>
			</div>
			<div class="flex flex-col items-start justify-start gap-y-1">
				<p class="text-lg text-black font-bold">Category:</p>
				<p>@category</p>
			</div>
		</div>
		<div class="flex flex-col justify-start items-start w-1/3 gap-y-4">
			<h3 class="text-xl font-medium text-black">@title</h3>
			<p class="text-lg text-black">Health-conscious counter serve offering local, seasonal cafe eats in a bright,
				all-white
				interior.</p>
		</div>
		<div class="flex flex-col justify-start items-start w-1/3 gap-y-4">
			<h4 class="text-xl text-black font-medium">Reviews</h4>
			<div class="flex flex-col justify-center items-center overflow-y-scroll gap-y-4 no-scrollbar">
				@for (int i = 0; i < 3; i++)
				{
					<Review name="Zeyad Omran" rating="4" content="Fantastic restaurant with great service and staff." />
				}
			</div>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public string title { get; set; } = String.Empty;
	[Parameter]
	public int rating { get; set; } = 0;
	[Parameter]
	public int price { get; set; } = 0;
	[Parameter]
	public string address { get; set; } = String.Empty;
	[Parameter]
	public string category { get; set; } = String.Empty;
}